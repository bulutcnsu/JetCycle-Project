
<%- include  ('../partials/_header');  %>
<head> <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
	<link rel="stylesheet" href="/css/shopping.css"></head>

<body>
	<main class="page">
	 	<section class="shopping-cart dark">
	 		<div class="container">
			        <div class="content">
					
	 				<div class="row">
	 					<div class="col-md-12 col-lg-8">

							
	 						<div class="items">

						

								<!-- Buraya Ã¼rÃ¼n sayÄ±sÄ± eklenmesi gereli , sayÄ±yÄ± da function aracÄ±lÄ±ÄŸÄ±yla almalyÄ±z-->
				 				<div class="product">
									<% for(let i=0; i< basket.length; i++){ %>
									
				 					<div class="row">
					 					<div class="col-md-3">
					 						<img class="img-fluid mx-auto d-block image" src=" <%= basket[i].image %>">
					 					</div> <!--col-lg-3 close-->

					 					<div class="col-md-8">
					 						<div class="info">
						 						<div class="row">
							 						<div class="col-md-4 product-name">
							 							<div class="product-name">
								 							<a href="#" > <%= basket[i].name %></a>
								 							<div class="product-info">
									 							<div>Price <span class="value"> <%= basket[i].price%></span></div>
									 							<div>Size: <span class="value"> <%= basket[i].size %></span></div>
									 							<div>Color: <span class="value"> <%= basket[i].color %></span></div>
									 						</div>
									 					</div>
							 						</div>
							 						
													 <div class="col-md-4 quantity" >
														<label>Quantity:</label>
														<div class="input-group" >
														<a href="/users/shopping/decrease/<%= basket[i]._id  %>?_method=DELETE">  <button class="btn btn-outline-secondary decrease ">ðŸ”½</button></a>
														  <input type="number" value="<%= basket[i].quantity %>" class="form-control quantity-input" style="width:10px; align-items: center;" id="quantity-<%= basket[i]._id %>" readonly>
														  <a href="/users/shopping/<%= basket[i]._id  %>?_method=GET">  <button class="btn btn-outline-secondary increase"  >ðŸ”¼</button></a>
														</div>
													  </div>
							 						
													<div class="col-md-3 price">
							 							<span>$  <%= (basket[i].price * basket[i].quantity) %></span>
							 						</div>
												
													 <div class="col-md-1 price">
														
														<a href="/users/shopping/<%= basket[i]._id  %>?_method=DELETE" 
															onclick="return confirm('ARE YOU SURE')" > 
															<i class="fa fa-trash" aria-hidden="true"></i></a>
													</div>
												</div> <!--inside row close-->

							 					</div> <!--info  close-->
											
											</div> <!--extra-->

							 				</div> <!--col-lg-8 close-->
											<hr>
											 <% } %>
										
					 				</div> <!--div row close-->
									
								
								
				 				 <!--div product close-->
								</div>
								
				 			</div> <!--col-lg-8 close-->
					
						
					
			 			<div class="col-md-12 col-lg-4">
			 				<div class="summary">
			 					<h3>Summary</h3>
			 					<div class="summary-item"><span class="text">Subtotal</span><span class="price">$ <%= totalPrice %></span></div>
			 					<div class="summary-item"><span class="text">Discount</span><span class="price">$0</span></div>
			 					<div class="summary-item"><span class="text">Shipping</span><span class="price">$0</span></div>
			 					<div class="summary-item"><span class="text">Total</span><span class="price">$ <%= totalPrice %> </span></div>
			 					<button type="button" class="btn btn-success btn-lg btn-block" >Checkout</button>
				 			</div>
			 			</div>
		 			</div> <!--div row close-->

		 		</div><!--col-rowclose-->
			
	 		
		</section>
	</main>
</body>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
